extends layout
block content
    .admin-panel.clearfix
      .slidebar
        ul
          li
            a#targeted(href="/ao/aoregister") Add Farmer one
          li
            a(href="#") Manage Farmer One
          li
            a(href="#") Manage Farmers
          li
            a(href="#") Manage Products
          li
            a(href="#") Report
          li
            a(href="#") Logout
        
      .dash_display
         header.card-header
          h4.card-title Welcome 

            table.table
              if registerFarmers.length
                thead
                    tr
                        th Firstname
                        th Lastname
                        th gender
                        th ward
                        th 
                        th
                tbody
                  each registerFarmer in registerFarmers
                    tr
                        td=registerFarmer.reg_fname
                        td=registerFarmer.reg_lname
                        td=registerFarmer.gender
                        td=registerFarmer.ward
                        td  
                            a(href='/update/'+registerFarmer._id) Update
                        td
                            form(method="post" action='/farmerOne/delete')
                                input(type="hidden", placeholder="", name="delete_id", value=registerFarmer._id)
                                button.btn.btn-dark.btn-block(type="submit") Delete