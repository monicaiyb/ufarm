extends layout
block content
    div#product
      |Massajja farmers beyayala ku UFARM
      .form-row
        div.col.form-group.col   
          form.search(action='/')
            div.form-row
                    div.col-md-8
                        input.name(name='pName' placeholder="Search product by product name...")
                    div.col-md-2
                        input.btn.btn-dark.btn-block(type="submit" value="search") 
          .row
            if products.length
              each product in products
                .col-md-4
                  .card-deck
                    .card
                      img.card-img-top(src='/uploads/'+product.prodImage height='200px' width='200px')
                      .card-body
                        .card-title #{product.pName}
                        .card-text 
                        table
                          tr
                            th Price UGX 
                            td #{product.pUnitPrice}
                          tr
                            th  Quantity kg
                            td #{product.pQuantity}
                          tr 
                            th Pay using: 
                            td #{product.paymentMode}
                          tr
                            th Delivery Mode:
                            td #{product.deliveryMode}
                          tr
                            th Farmer ID:
                            td #{product.pFarmerID}
                          tr
                            th Contact:
                            td #{product.pFphone}

                      .card-footer
                        small.text-muted Added on #{product.pdate}
                        button(type="button" class="btn btn-success btn-sm") Order
                        button(type="button" class="btn btn-info btn-sm") Book
