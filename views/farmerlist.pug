extends layout
block content
    .admin-panel.clearfix
      .slidebar
        ul
          li
            a(href="/farmerOne/registerFarmer") Add Farmer
          li
            a(href="#") Inspection
          li
            a(href="#Inspect") Approve Farmers                
          li
            a(href="#Approve") Add Products
          li
            a(href="#Repor") Report
          li
            a(href="#Logout") Logout
        
      .dash_display
         header.card-header
          h4.card-title Welcome 

            table.table
              if registerFarmers.length
                thead
                    tr
                        th Firstname
                        th Lastname
                        th gender
                        th ward
                        th 
                        th
                tbody
                  each registerFarmer in registerFarmers
                    tr
                        td=registerFarmer.reg_fname
                        td=registerFarmer.reg_lname
                        td=registerFarmer.gender
                        td=registerFarmer.ward
                        td  
                            a(href='/update/'+registerFarmer._id) Update
                        td
                            form(method="post" action='/farmerOne/farmerlist/delete')
                                input(type="hidden", placeholder="", name="delete_id", value=registerFarmer.ward)
                                button.btn.btn-dark.btn-block(type="submit") Delete