extends layout
block content
    .admin-panel.clearfix
      .slidebar
        ul
          li
            a#targeted(href="/ao") Add Farmer one
            
          li
            a(href="/ao/foList") Manage Farmer One
          li
            a(href="/fo/farmerList") Manage Farmers
          li
            a(href="/farmer/pList") Manage Products
          li

            a(href="#") Report
           
          li
            a(href="#") Logout
          li
          // Trigger/Open The Modal
          button#myBtn Open Modal
          // The Modal
          #myModal.modal
            // Modal content
            .modal-content
              span.close Ã—
               h4 Create account
                  form.form_main(name="regForm" method="post" action="/ao" onsubmit="return regFormValidation()")
                        
                        .form-row
                          .col-md-4
                            label First Name:
                            input#reg_fname.name(type="text" placeholder="First Name" name="fname")
                          .col-md-4
                            label Last Name:
                            input#reg_lname.name(type="text" placeholder="Last Name" name="lname")
                          .col-md-4
                            label username:
                            input#username.name(type="text" placeholder="Username" name="username")                    
                        .form-row
                          .col
                            label Date of birth:
                            input#reg_dob.name(type="date" placeholder="" name="reg_dob")
                          .col
                            label Phone Number:
                            input#reg_phone.name(type="tel" placeholder="Phone Number" name="reg_phone")
                          .col
                            label ID Number:
                            input#reg_id.name(type="text" placeholder="ID Number" name="reg_id")             
                        .form-row
                          .col
                            label Date of Registration:
                            input#reg_date.name(type="date" placeholder="Date of Registration" name="reg_date")
                          .col
                            h4 Gender:
                            label.form-check.form-check-inline Female 
                            input.form-check-input(type="radio" id="female" name="gender" value="female")
                            | Female 
                            label.form-check.form-check-inline Male 
                            input.form-check-input(type="radio" id="male" name="gender" value="male")
                            | Male                  
                          .col
                            label Farmer Ward
                            select#ward.name(name="ward")
                              option(value="masaja") masaja
                              option(value="makindye") makindye
                              option(value="busabala") busabala
                              option(value="bunamwaya") bunamwaya
                        .form-row
                          .col
                        
                            h4 Products:
                            .form-check.form-check-inline
                              input#inlineCheckbox1.form-check-input(type="checkbox" name="product" value="Horticulture" )
                              label(for="inlineCheckbox1") Horticulture
                            .form-check.form-check-inline
                              input#inlineCheckbox2.form-check-input(type="checkbox" name="product" value="poultry" )
                              label(for="poultry") Poultry
                            .form-check.form-check-inline
                              input#inlineCheckbox3.form-check-input(type="checkbox" name="product" value="Dairy" )
                              label#form-check-label(for="inlineCheckbox3") Dairy
                              .form-check.form-check-inline
                              input#inlineCheckbox4.form-check-input(type="checkbox" name="product" value="Others" )
                              label#form-check-label(for="inlineCheckbox4") Others
                        .form-row
                          .col
                            label(for="address") Address:
                            input#address.name(type="text" name="address")
                          .col
                            label Resident type:
                            select#no_of_year.no_of_yr(name="no_of_year")
                              option(value="New") New Resident
                              option(value="Temporary") Temporary Resident
                              option(value="Permanent") Permanent Resident 
                            
                          .col
                            label Role:
                            select#role.role(name="role")
                              option(value="admin") Admin
                              option(value="aOfficer") Agric Officer
                              option(value="fo") Farmer One
                              option(value="farmer") Farmer
                        .form-row
                          .col.form-group
                            label(for="reg_password") Create password
                            input#reg_password.name(type="password" placeholder="Password" name="password") 
                        .form-row
                          .col.form-group
                            input#regButton.button(type="submit" value="Register")
      .dash_display
